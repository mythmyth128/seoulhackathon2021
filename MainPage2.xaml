            <Button Text="&lt;"
                Size="100,100"
                Position="180,0"
                PivotPoint="CenterLeft"
                ParentOrigin="CenterLeft"
                PositionUsesPivotPoint="true"
                Clicked="LeftButton_Clicked">
            </Button>
            <Button Text=">"
                Size="100,100"
                Position="-180,0"
                PivotPoint="CenterRight"
                ParentOrigin="CenterRight"
                PositionUsesPivotPoint="true"
                Clicked="RightButton_Clicked">
            </Button>


